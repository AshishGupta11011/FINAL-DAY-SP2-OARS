if (!ModelState.IsValid)
            {
                return BadRequest(ModelState);
            }

            IEnumerable<Flight> queryFlightData = (from f in db.Flights
                                       where f.FlightId == booking.FlightId
                                       select f ).ToList();
            List<Flight> Flight = queryFlightData.ToList();

            var Passengers = from p in db.Passengers
                       where p.BookingId == booking.BookingId
                       select p;

            var Cancellations = from c in db.Cancellations
                             where c.BookingId == booking.BookingId
                             select c;
            var Customers = from c in db.Customers
                                where c.CustomerId == booking.CustomerId
                                select c;


            db.Bookings.Add(booking);
            db.SaveChanges();
